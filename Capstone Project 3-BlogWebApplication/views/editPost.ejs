<%- include("partials/header.ejs")%>
<form action="/update/<%=post.postID%>" method="POST">
    <div class="form-group">
        <input type="text" name="title" placeholder="Title" value="<%=post.postTitle%>">
    </div>
    <div class="form-group">
        <textarea name="content" placeholder="Content" rows="10" cols="50"><%= post.postContent%></textarea><br><br>
    </div>
    <div class="form-group">
        <input type="submit" value="Save">
    </div>
</form>
